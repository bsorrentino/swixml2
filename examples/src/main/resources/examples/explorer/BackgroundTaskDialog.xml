<?xml version="1.0" encoding="windows-1252"?>

<dialog 
    minimumSize="400,240"
	resizable="true" 
	title="Network Time [Async Task example] " 
	undecorated="false" 
	alwaysOnTop="true"
	defaultCloseOperation="JFrame.HIDE_ON_CLOSE" 
	modal="false"
	>

<vbox gap="20" >

	<hbox maximumSize="500,30">
	<label text="Get time from NIST"/>
	<textfield id="txtShowTime" editable="false" bindWith="time"/>
	<button id="btnShowTime" Text="Retrieve Time" action="retrieveTime"/>	
	</hbox>
	
	<!-- panel layout="GridLayout(2,1)" maximumSize="500,60" -->
	<vbox >
	<label border="EmptyBorder(1,1,1,1)" bindWith="file" />	
	<hbox><progressbar id="progressBar" stringPainted="true"/><button  Text="Scan Dir" action="scanDir"/></hbox> 
	</vbox>
    
</vbox>

</dialog>
