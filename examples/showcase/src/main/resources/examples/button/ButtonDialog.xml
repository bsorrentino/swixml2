<?xml version="1.0" encoding="UTF-8" ?>

<dialog name="dialog"
    minimumSize="400,240"
	resizable="true" 
	title="Example Button usage" 
	undecorated="false" 
	alwaysOnTop="true"
	defaultCloseOperation="JFrame.HIDE_ON_CLOSE" 
	modal="false"
	>

<panel layout="borderLayout">
<vbox constraints="BorderLayout.CENTER">

<toggleButton name="tb" id="toggleButton" action="onCLick"  />

</vbox>

<hbox constraints="BorderLayout.SOUTH">
<button text="close" action="close"/>
</hbox>
</panel>


</dialog>
