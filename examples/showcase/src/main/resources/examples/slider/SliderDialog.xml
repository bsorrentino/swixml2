<?xml version="1.0" encoding="windows-1252"?>

<dialog 
prefferdSize="500,500"
resizable="false" title="Slider Dialog"
defaultCloseOperation="JDialog.DISPOSE_ON_CLOSE">

<vbox>

    <panel  border="CompoundBorder(EmptyBorder(10,1,10,10), TitledBorder(Slider))">

		<slider constraints="3,43,5,1" minimum="0" maximum="255" value="200" action="transparencyAction" id="transparency" bindWith="transparency"/>
    
    </panel>

   	<box.vstrut height="10"/>

    <hbox>
    	<button text="Test" action="test"/>
    	<box.glue/>
    	<button text="Submit" action="submit"/>
    	<box.hstrut width="5"/>
    	<button text="Close" action="close"/>
    </hbox>
    
</vbox>

</dialog>
